<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_form"
        android:orientation="vertical"
        android:paddingTop="6dp">

        <TextView
            android:id="@+id/tv_item_cat1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:text="Category 1"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/title_size"
            android:layout_marginLeft="6dp"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/lv_item_cat1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager"
            tools:listitem="@layout/card_item_long"/>

        <TextView
            android:id="@+id/tv_item_cat2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:text="Category 2"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/title_size"
            android:layout_marginLeft="6dp"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/lv_item_cat2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager"
            tools:listitem="@layout/card_item_long"/>

        <TextView
            android:id="@+id/tv_item_cat3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:text="Category 3"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/title_size"
            android:layout_marginLeft="6dp"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/lv_item_cat3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager"
            tools:listitem="@layout/card_item_long"/>

        <TextView
            android:id="@+id/tv_item_cat4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:text="Category 4"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/title_size"
            android:layout_marginLeft="6dp"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/lv_item_cat4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager"
            tools:listitem="@layout/card_item_long"/>

    </LinearLayout>
</ScrollView>